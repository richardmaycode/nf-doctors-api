<div class="w-full md:w-1/2 mx-auto flex flex-col gap-4">
  <div>
    <h1 class="text-4xl dark:text-slate-200">Employee details</h1>
  </div>
  <div>
    <p class="dark:text-slate-200">Name</p>
    <p><%= @employee.display_name, class: "dark:text-slate-200" %></p>
  </div>
  <div>
    <p class="dark:text-slate-200">Location</p>
    <p><%= @employee.location.name, class: "dark:text-slate-200" %></p>
  </div>
  <div>
    <%= link_to "Back", @employee.facility, class: "dark:text-slate-200" %>
    <%= link_to "Edit", edit_facility_employee_path(@employee.facility, @employee), class: "dark:text-slate-200" %>
    <%= link_to "Delete", facility_employee_path(@employee.facility, @employee), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "dark:text-slate-200" %>
  </div>
</div>
