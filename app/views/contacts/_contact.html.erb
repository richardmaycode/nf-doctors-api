<div class="table-row">
  <div class="table-cell p-3 dark:text-slate-200">
    <%= contact.method.titleize %>
  </div>
  <div class="table-cell dark:text-slate-200">
    <%= contact.contactable.display_name %>
  </div>
  <div class="table-cell dark:text-slate-200">
    <%= contact.contactable.comments %>
  </div>
  <div class="table-cell dark:text-slate-200">
    <%= contact.private ? "Yes" : "No" %>
  </div>
  <div class="table-cell dark:text-slate-200">
    <%= contact.value %>
  </div>
  <div class="table-cell">
    <div class="flex gap-4">
      <%= link_to "Edit", edit_facility_contact_path(@facility, contact), class: "dark:text-slate-200" %>
      <%= button_to "Delete", facility_contact_path(@facility, contact), data: { method: :delete }, class: "text-red-900" %>
    </div>
  </div>
</div>