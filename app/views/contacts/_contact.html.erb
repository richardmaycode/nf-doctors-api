<div class="table-row">
  <div class="table-cell p-3">
    <%= contact.method.titleize %>
  </div>
  <div class="table-cell">
    <%= contact.contactable.display_name %>
  </div>
  <div class="table-cell">
    <%= contact.private ? "Yes" : "No" %>
  </div>
  <div class="table-cell">
    <%= contact.value %>
  </div>
  <div class="table-cell">
    <div class="flex gap-4">
      <%= link_to "View", facility_contact_path(@facility, contact)%>
      <%= link_to "Edit", edit_facility_contact_path(@facility, contact) %>
      <%= button_to "Delete", facility_contact_path(@facility, contact), data: { method: :delete }, class: "text-red-900" %>
    </div>
  </div>
</div>