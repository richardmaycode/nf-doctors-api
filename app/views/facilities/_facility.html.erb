<div class="table-row">
  <div class="table-cell">
    <%= facility.name %>
  </div>
  <div class="table-cell">
    <%= facility.status.titleize%>
  </div>
  <div class="table-cell">
    <%= facility.private ? "Yes" : "No" %>
  </div>
  <div class="table-cell">
    <%= facility.locations.count %>
  </div>
  <div class="table-cell">
    <div class="flex gap-4">
      <%= link_to "View", facility_path(facility)%>
      <%= link_to "Edit", edit_facility_path(facility) %>
      <%= button_to "Delete", facility_path(facility), data: { method: :delete }, class: "text-red-900" %>
    </div>
  </div>
</div>